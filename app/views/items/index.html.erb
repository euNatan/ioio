<%= render "share/slide" %>

<section id="main-content">

      <div class="row">
        <div class="small-16 columns">
          <h1>Suas aquisições</h1>
          <div class="big-sep"></div>
        </div>
      </div>

      <div class="row">
        <p id="notice"><%= notice %></p>

        <h4>
            <div id="user-widget">
              <% if current_user %>
                <%= image_tag current_user.image.thumb %> <strong> <%= current_user.name %></strong>!
                <%= link_to "Sair", destroy_user_session_path, method: :delete %>
              <% else %>
                <%= link_to "<i class=\"fa fa-1x fa-facebook-square\" aria-hidden=\"true\"></i> Entrar com Facebook".html_safe, user_facebook_omniauth_authorize_path, class:"facebook-button" %>
              <% end %>
            </div>
        </h4>


        <div class="row table">
          <table>
            <thead>
              <tr>
                <th>Coleção</th>
                <th>Foto</th>
                <th>Descrição</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td><%= item.collection.name %></td>
                  <td><%=image_tag item.photo[0].image.thumb %></td>
                  <td><%= item.descriprion %></td>
                  <td><%= link_to 'Ver', item %></td>
                  <td><%= link_to 'Editar', edit_item_path(item) %></td>
                  <td><%= link_to 'Remover', item, method: :delete, data: { confirm: 'Quer mesmo remover?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br>
        <%=link_to "Cadastre seu IOIO <span>Seja o maior de todos</span>".html_safe, new_item_path, class:"button cta-button" %>
      </div>
</section>
