<%@collection%>
<%= render "share/slide" %>

<section id="main-content">


      <div class="row game-presentation fontgame">
        <div class="small-16 large-4 columns">
          <%= image_tag @collection.image.medal %>
          <h1><%= @collection.name %></h1>
        </div>
        <div class="small-16 large-12 columns">
          <span class="desc"><h4>Descrição:</h4></span>
          <p><%= @collection.description %></p>

          <span class="desc"><h4>Estoque:</h4></span>
          <span class="disponiveis">499</span>/<%= @collection.stock %>

        </div>
      </div>



      <div class="row">
        <div class="small-16 columns">
          <div class="big-sep"></div>
        </div>
      </div>

      <div class="row">
        <div class="small-16 columns">
          <% for i in 1..@collection.stock %>
            <% active = @collection.item.find_by_code(i) %>
            <% if active %>
              <%= link_to "<div class=\"line-active\">#{i}</div>".html_safe, active %>
            <% else %>
              <div class="line-code"><%= i %></div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="small-16 columns">
          <div class="big-sep"></div>
        </div>
      </div>


</section>
